{
  "name": "google.com in the url",
  "version": "1.0",
  "description": "Shows a page action for urls which have the letter 'g' in them.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" :
  {
    "default_icon" : "icon-19.png",
    "default_title" : "google.com url"
  },
  "permissions" : [
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "js": ["myscript.js"]
    }
  ],
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "manifest_version": 2
}
